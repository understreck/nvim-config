{
  "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        },
    "html-languageserver": {
            "module": "/usr/lib/node_modules/vscode-html-languageserver-bin/htmlServerMain.js",
            "args": [
                "--node-ipc"
            ],
            "filetypes": [
                "html"
            ],
            "css": false,
            "javascript": false,
            "trace.server": "verbose",
            "initializationOptions": {
                "css": false,
                "javascript": false
            }
        }
  },
  "coc.preferences.formatOnSaveFiletypes": ["cpp", "glsl"],
  "python.jediEnabled": false,
  "clangd.semanticHighlighting" : true
}
