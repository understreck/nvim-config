{
  "languageserver": {
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": [
        "cmake"
      ],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "hdlChecker": {
      "command": "hdl_checker",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "hdl_checker.config"
      ],
      "filetypes": [
        "vhdl",
        "verilog",
        "systemverilog"
      ]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "cpp",
    "glsl",
    "java",
    "json",
    "groovy"
  ],
  "python.jediEnabled": false,
  "clangd.semanticHighlighting": true
}
